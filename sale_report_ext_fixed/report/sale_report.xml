<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="purchase_order_report_inherit" inherit_id="sale.report_saleorder_document">
		<xpath expr="//t[@t-set='address']" position="replace">
			<span>&#160;</span>
		</xpath>

		<xpath expr="//div[@class='page']" position="replace">
			<div class="page" style="margin-top:-80px;">
				<div class="oe_structure"/>
				<div style="font-size:30px; font-weight: bold;" align="center">
					<strong>DRILLING CALLOUT</strong>
				</div>
				<br/>
				<div class="oe_structure"/>

				<div class="row">
					<div class="col-6">
						<strong>Request Number:</strong>
						<span class="m-0" t-field="doc.request_number"/>
					</div>
					<div class="col-5">
						<span>
							<strong>Priority:</strong>
							<span class="m-0" t-field="doc.priority"/>
						</span>
					</div>
				</div>

				<div class="row">
					<div class="col-6">
						<strong>Request Date:</strong>
						<t t-set="date" t-value="doc.date_order.date()"/>
						<span class="m-0" t-esc="date"/>
					</div>
					<div class="col-5">
						<span >
							<strong>Well Charge:</strong>
							<span class="m-0" t-field="doc.well_charge"/>
						</span>
					</div>
				</div>

				<div class="row">
					<div class="col-6">
						<strong>Rig Code:</strong>
						<span class="m-0" t-field="doc.rig_code"/>
					</div>
					<div class="col-5">
						<span >
							<strong>Well Number:</strong>
							<span class="m-0" t-field="doc.well_number"/>
						</span>
					</div>
				</div>

				<div class="row">
					<div class="col-6">
						<strong>Cost Center:</strong>
						<span class="m-0" t-field="doc.cost_center"/>
					</div>
					<div class="col-5">
						<span>
							<strong>Required Date:</strong>
							<t t-set="date" t-value="doc.commitment_date.date()"/>
							<span class="m-0" t-esc="date"/>
						</span>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<strong>Vendor:</strong>
						<span class="m-0" t-field="doc.vendor"/>
					</div>
					<div class="col-5">
						<span>
							<strong>Required Time:</strong>
							<t t-set="time" t-value="doc.commitment_date.time()"/>
							<span class="m-0" t-esc="time"/>
						</span>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<strong>Vendor Name:</strong>
						<span class="m-0" t-field="doc.vendor_name"/>
					</div>
					<div class="col-5">
						<span>
							<strong>REF DRSS:</strong>
							<span class="m-0" t-field="doc.ref_drss"/>
						</span>
					</div>
				</div>

				<br/>
				<div class="row mt32 mb32" id="informations">
					<div class="col-auto col-3 mw-100 mb-2">
						<strong>Comments:</strong>
						<span class="m-0" t-field="doc.client_order_ref"/>
					</div>
				</div>
				<table class="table table-sm o_main_table">
					<thead>
						<tr>
							<th name="th_description"><strong>Sr#</strong></th>
							<th name="th_taxes"><strong>Material/Service Description</strong></th>
							<th name="th_date_req" class="text-center"><strong>Quantity</strong></th>
							<th name="th_quantity" class="text-right"><strong>Uom</strong></th>
							<th name="th_quantity" class="text-right"><strong>Unit Price</strong></th>
							<th name="th_quantity" class="text-right"><strong>Subtotal</strong></th>
						</tr>
					</thead>
					<tbody>
						<t t-set="current_subtotal" t-value="0"/>
						<t t-set="i" t-value="0"/>
						<t t-foreach="doc.order_line" t-as="line">
							<!--                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>-->
							<!--                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>-->

							<tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
								<t t-if="not line.display_type">
									<t t-set="i" t-value="i+1"/>
									<td id="count">
										<span  t-esc="i"/>
									</td>
									<td id="product">
										<span t-field="line.name"/>
									</td>
									<td class="text-center">
										<span t-field="line.product_uom_qty"/>
									</td>
									<td class="text-right">
										<span t-field="line.product_id.uom_id.name"/>
									</td>
									<td class="text-right">
										<span t-field="line.price_unit"/>
									</td>
									<td class="text-right">
										<span t-field="line.price_subtotal"/>
									</td>
								</t>

							</tr>
<!--							<t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">-->
<!--								<tr class="is-subtotal text-right">-->
<!--									<td colspan="99" id="subtotal">-->
<!--										<strong class="mr16">Subtotal</strong>-->
<!--										<span-->
<!--												t-esc="current_subtotal"-->
<!--												t-options='{"widget": "monetary", "display_currency": o.currency_id}'-->
<!--										/>-->
<!--									</td>-->
<!--								</tr>-->
<!--							</t>-->
						</t>
					</tbody>
				</table>

				            <div id="total" class="row justify-content-end">
				                <div class="col-4">
				                    <table class="table table-sm">
				                        <tr class="border-black">
				                            <td name="td_subtotal_label"><strong>Subtotal</strong></td>
				                            <td class="text-right">
				                                <span t-field="doc.amount_untaxed"
				                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
				                            </td>
				                        </tr>
				                        <tr>
				                            <td name="td_taxes_label">Taxes</td>
				                            <td class="text-right">
				                                <span t-field="doc.amount_tax"
				                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
				                            </td>
				                        </tr>
				                        <tr class="border-black o_total">
				                            <td name="td_amount_total_label"><strong>Total</strong></td>
				                            <td class="text-right">
				                                <span t-field="doc.amount_total"
				                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
				                            </td>
				                        </tr>
				                    </table>
				                </div>
				            </div>

				<!--            <p t-field="o.notes"/>-->
				<div class="oe_structure"/>
			</div>

		</xpath>
	</template>


</odoo>
