<odoo>
  <data>

      <record model="ir.ui.view" id="inherit_states_mrp">
          <field name="name">add states</field>
          <field name="model">mrp.production</field>
          <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='routing_id']" position="after">
                  <field name="check" invisible="1"/>
              </xpath>
              <xpath expr="//button[@name='button_mark_done']" position="before">
                  <button string="Final Testing" name="final_testing" type="object" class="oe_highlight"
                          attrs="{'invisible': [('state', '!=', 'to_close')]}"/>
              </xpath>
              <xpath expr="//button[@name='button_plan']" position="before">
                  <button string="Quality Checks" name="action_qc_testing" type="object" class="oe_highlight"
                          attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('check', '!=',True)]}"/>
              </xpath>
              <xpath expr="//button[@name='button_plan']" position="attributes">
                  <attribute name="attrs">{'invisible': [('state', '!=', 'confirm')]}</attribute>
              </xpath>
              <xpath expr="//button[@name='open_produce_product']" position="before">
                  <button string="Confirmed" name="confirmation" type="object" class="oe_highlight"
                          attrs="{'invisible': [('state', '!=', 'qc_test')]}"/>
              </xpath>
              <xpath expr="//button[@name='button_mark_done']" position="attributes">
                  <attribute name="attrs">{'invisible': [('state', '!=', 'qc_labeling')]}</attribute>
              </xpath>
          </field>
      </record>
  </data>
</odoo>
