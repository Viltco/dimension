<odoo>
  <data>
    <!-- explicit list view definition -->


    <record id="add_checkbox_in_vendor" model="ir.ui.view">
          <field name="name">Is Approved Vendor</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='vat']" position="after">
                  <field name="is_approved_vendor"/>
              </xpath>
          </field>
    </record>
        <record id="add_checkbox_in_product" model="ir.ui.view">
          <field name="name">add critical item</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_only_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//div[@name='options']" position="after">
                  <field name="critical_item"/>
                  <label for="critical_item"/>
              </xpath>
          </field>
    </record>

